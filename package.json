{
  "name": "dirfix",
  "version": "1.0.0",
  "description": "Smart automatic <span dir> fixer for mixed LTR/RTL HTML",
  "license": "MIT",
  "author": "Alireza Tabatabaeian",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./cli": {
      "import": "./bin/cli.js",
      "require": "./bin/cli.cjs"
    }
  },
  "sideEffects": false,
  "bin": {
    "dirfix": "../dirfix-cli/bin/cli.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "prepublishOnly": "npm run build",
    "test:esm": "jest -c jest.esm.config.ts",
    "test:cjs": "jest -c jest.cjs.config.ts",
    "test": "npm run test:cjs && npm run test:esm"
  },
  "keywords": [
    "rtl",
    "ltr",
    "i18n",
    "bidi",
    "text-direction",
    "tiptap",
    "wysiwyg"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alireza-Tabatabaeian/dirfix"
  },
  "bugs": {
    "url": "https://github.com/Alireza-Tabatabaeian/dirfix/issues"
  },
  "homepage": "https://github.com/Alireza-Tabatabaeian/dirfix#readme",
  "optionalDependencies": {
    "jsdom": "^26.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
