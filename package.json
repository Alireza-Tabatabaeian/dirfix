{
  "name": "@rahyafthi/dirfix",
  "version": "1.0.5",
  "description": "Smart automatic <span dir> fixer for mixed LTR/RTL HTML",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/esm/index.js"
    },
    "./jsdomFactory": {
      "import": "./dist/esm/jsdomFactory.js",
      "require": "./dist/cjs/jsdomFactory.cjs",
      "default": "./dist/esm/jsdomFactory.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "ts-build-wizard",
    "prepublishOnly": "npm run build",
    "test:esm": "jest -c jest.esm.config.ts",
    "test:cjs": "jest -c jest.cjs.config.ts",
    "test": "npm run test:cjs && npm run test:esm"
  },
  "keywords": [
    "rtl",
    "ltr",
    "i18n",
    "bidi",
    "text-direction",
    "tiptap",
    "wysiwyg"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alireza-Tabatabaeian/dirfix"
  },
  "bugs": {
    "url": "https://github.com/Alireza-Tabatabaeian/dirfix/issues"
  },
  "homepage": "https://github.com/Alireza-Tabatabaeian/dirfix#readme",
  "optionalDependencies": {
    "jsdom": "^26.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdomfactory": "^1.0.0",
    "rimraf": "^6.0.1",
    "ts-build-wizard": "^1.0.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.0",
    "typescript": "^5.5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
